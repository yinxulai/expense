{
  "compilerOptions": {
    "strict": true, 
    "target": "es2017", 
    "module": "commonjs", 
    "baseUrl": "./source",
    "skipLibCheck": true, 
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 

    "paths": {
      "@constants/*": ["constants/*"],
      "@modules/*": ["modules/*"],
      "@plugins/*": ["plugins/*"],
      "@helpers/*": ["helpers/*"],
      "@types/*": ["types/*"]
    }
  }
}
